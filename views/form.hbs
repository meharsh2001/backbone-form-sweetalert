<body class="">
    <div class="panel panel-default panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Manage Users</h3>
        </div>
        <div class="right">
            <input type="button" class="button" id="change_pass" value="change password"><br><br>
            <input type="button" class="button" id="" value="disable user"><br><br>
            <input type="button" class="button" id="delete_user" value="delete user">
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            var userData = ['meharsh2001@gmail.com', 'harsh.jain@srrintl.com', 'Userc', 'Userd']
            var schemaForm = Backbone.Model.extend({
                schema: {
                    user: { type: 'Select', options: userData }
                }
            });

            var user = new schemaForm();

            var form = new Backbone.Form({
                model: user
            }).render();

            dialog = Backbone.View.extend({
                el: 'html',
                events: {
                    "click #change_pass": "change",
                    "click #delete_user": "delete",
                },
                change: function () {
                    swal({
                        title: "Are you sure?",
                        text: "change password",
                        type: "success",
                        showCancelButton: true,
                        confirmButtonColor: 'blue',
                        confirmButtonText: 'change',
                        closeOnConfirm: false,
                        //closeOnCancel: false
                    });
                },
                delete: function () {
                    var formDivExist = document.getElementsByClassName('panel-body').length;
                    if (formDivExist == 0) {
                        $(".sweet-overlay").remove();
                        $(".sweet-alert").remove();
                        swal("Are you sure u want to continue if Yes click on button again");
                        $(".sweet-alert").append('<div class="panel-body"></div>');
                        dialogInput()
                    } else dialogInput()

                    function dialogInput() {
                        $(".panel-body").html(form.el);
                        var selectize = $('#c1_user').selectize({
                            maxItems: null,//limit for user to select at a time
                            create: false, //allow user to add custom tags
                            closeAfterSelect: true,
                            allowEmptyOption:false
                        })[0].selectize.clear();
                        $(".selectize-control").removeClass('form-control');
                        swal({
                            title: "Are you sure?",
                            text: "delete user",
                            type: "warning",
                            showCancelButton: true,
                            confirmButtonColor: '#DD6B55',
                            confirmButtonText: 'delete',
                            closeOnConfirm: false,
                            //closeOnCancel: false
                        },
                            function (rel) {
                                var newOwner = $("select[name='user']").val();
                                $(".sweet-overlay").remove();
                                $(".sweet-alert").remove();
                                if (rel) {
                                    swal("Deleted!", newOwner, "success");

                                    $(".sweet-overlay").remove();
                                    $(".sweet-alert").remove();
                                }
                                window.location.reload();
                            });
                    }
                }
            });
            var backbone = new dialog();
        });  
    </script>

